datasource db {
    provider = "sqlite"
    url      = "file:./gqlVsRest.db"
}

generator client {
    provider = "prisma-client-js"
}

generator zod {
    provider      = "zod-prisma"
    output        = "./zod-schemas"
    relationModel = "default"
    modelCase     = "PascalCase"
    modelSuffix   = "Model"
}

model Blogpost {
    id          Int       @id @default(autoincrement())
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
    publishedAt DateTime?
    title       String
    body        String
    author      String?
}
